<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NEWTON-RAPHSON"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar" />
    </LinearLayout>

    <EditText
        android:id="@+id/etFuncion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Función f(x) (ej: x**2 - 4)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etLiteral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Variable (ej: x)"
        android:inputType="text"
        android:maxLength="1"
        android:ems="1"/>

    <EditText
        android:id="@+id/etAproxInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aproximación inicial x₀"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etIteraciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Iteraciones máx."
            android:inputType="number"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/etErrorPermitido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Error permitido"
            android:inputType="numberDecimal"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginBottom="16dp" />

    <HorizontalScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#f0f0f0">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="i"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="xᵢ"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="f(xᵢ)"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="xᵢ₊₁"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="error"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/bodyScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNewtonRaphson"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </HorizontalScrollView>

</LinearLayout>