<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER AMARILLO -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#E8D845"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Examen"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- CONTENIDO CON SCROLL -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÓN: TEMAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="#E8D845"
                android:layout_marginBottom="16dp" />

            <!-- TEMA 1: INTEGRALES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/checkIntegrales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Integrales"
                    android:textSize="16sp"
                    android:buttonTint="#E8D845" />

                <Spinner
                    android:id="@+id/spinnerDificultadIntegrales"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>

            <!-- TEMA 2: DERIVADAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/checkDerivadas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Derivadas"
                    android:textSize="16sp"
                    android:buttonTint="#E8D845" />

                <Spinner
                    android:id="@+id/spinnerDificultadDerivadas"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>

            <!-- TEMA 3: CONVERSIONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/checkConversiones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Conversiones"
                    android:textSize="16sp"
                    android:buttonTint="#E8D845" />

                <Spinner
                    android:id="@+id/spinnerDificultadConversiones"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>

            <!-- TEMA 4: SISTEMAS NUMÉRICOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/checkSistemasNumericos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sistemas numéricos"
                    android:textSize="16sp"
                    android:buttonTint="#E8D845" />

                <Spinner
                    android:id="@+id/spinnerDificultadSistemasNumericos"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>

            <!-- TEMA 5: FÍSICA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/checkFisica"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Física"
                    android:textSize="16sp"
                    android:buttonTint="#E8D845" />

                <Spinner
                    android:id="@+id/spinnerDificultadFisica"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>

            <!-- SPINNER: SELECCIONAR MODO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo de examen:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerModo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/darker_gray"
                android:backgroundTint="#E0E0E0"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- BOTÓN: COMENZAR -->
            <Button
                android:id="@+id/btnComenzar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Comenzar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:backgroundTint="#E8D845"
                android:textColor="#FFFFFF"
                app:cornerRadius="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>